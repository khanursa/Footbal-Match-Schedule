<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="230dp"
    android:background="@android:drawable/dialog_holo_light_frame">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imagePlayer"
        android:layout_width="150dp"
        android:layout_height="150dp"/>
    <TextView
        android:id="@+id/namePlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/imagePlayer"
        android:layout_alignEnd="@id/imagePlayer"
        android:layout_below="@id/imagePlayer"
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        android:gravity="center"
        android:maxLines="2"/>

</RelativeLayout>