<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content" android:layout_height="230dp"
    android:background="@android:drawable/dialog_holo_light_frame">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageTeam"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:padding="20dp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/teamFavorite"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@id/imageTeam"
        android:layout_margin="5dp"
        android:tint="@android:color/holo_red_dark"
        app:srcCompat="@drawable/ic_favorite_border_black_24dp" />

    <TextView
        android:id="@+id/imageTeamName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/imageTeam"
        android:layout_alignEnd="@id/imageTeam"
        android:layout_below="@id/imageTeam"
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        android:gravity="center"
        android:maxLines="2"/>

</RelativeLayout>